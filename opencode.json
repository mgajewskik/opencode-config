{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoupdate": true,
  "instructions": [
    "AGENTS.md"
  ],
  "model": "anthropic/claude-opus-4-5",
  "small_model": "anthropic/claude-sonnet-4-5",
  "agent": {
    "plan": {
      "model": "anthropic/claude-opus-4-5"
    },
    "build": {
      "model": "anthropic/claude-sonnet-4-5"
    },
    "Analyze": {
      "model": "google/gemini-3-pro-preview",
      "prompt": "{file:./prompts/analyze.md}",
      "tools": {
        "bash": true,
        "edit": false,
        "write": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "lsp": true,
        "patch": false,
        "skill": true,
        "todowrite": false,
        "todoread": false,
        "webfetch": true
      }
    },
    "Q&A": {
      "model": "xai/grok-4-1-fast",
      "prompt": "{file:./prompts/qa.md}",
      "tools": {
        "bash": true,
        "edit": false,
        "write": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": false,
        "todowrite": false,
        "todoread": false,
        "webfetch": true
      }
    }
  },
  "formatter": {
    "terraform": {
      "disabled": false,
      "command": [
        "terraform",
        "fmt",
        "$FILE"
      ],
      "extensions": [
        ".tf",
        ".hcl",
        ".tfvars"
      ]
    },
    "shfmt": {
      "disabled": false,
      "command": [
        "shfmt",
        "-w",
        "$FILE"
      ],
      "extensions": [
        ".sh",
        ".bash",
        ".zsh",
        ".ksh"
      ]
    },
    "prettier": {
      "disabled": false,
      "command": [
        "mise",
        "x",
        "npm:prettier",
        "--",
        "prettier",
        "--write",
        "--tab-width",
        "2",
        "$FILE"
      ],
      "extensions": [
        ".json"
      ]
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  },
